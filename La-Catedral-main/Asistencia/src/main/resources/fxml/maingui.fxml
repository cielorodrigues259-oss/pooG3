   <tabs> <Tab text="Untitled Tab 1"> <content> <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
   </content> </Tab> </tabs> </TabPane>
 </center>


 <!-- Centro: aquí ponemos LOGIN -->
 <center>
  <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
