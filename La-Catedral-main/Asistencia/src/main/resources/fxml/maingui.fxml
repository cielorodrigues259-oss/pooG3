<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="bp" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.asistencia.control.MainguiController">

 <!-- Menú superior -->
 <top>
  <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER"> <menus> <Menu fx:id="menu1" mnemonicParsing="false" text="Restaurante">

   <items> 
    <MenuItem fx:id="menuItem2" mnemonicParsing="false" text="Adm. Empleados" />
